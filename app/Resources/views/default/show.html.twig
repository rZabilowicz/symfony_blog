{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ post.title }}</h1>
    <div>
        <p>{{ post.lead }}</p>
        <p>{{ post.content }}</p>

        <span class="float-right">Added: {{ post.createdAt | date('H:i d/m/Y')}}</span>
        
        <br>
        <hr>

        <h3>Comments</h3>

        {% for comment in post.comments %}
            <div>
                <p>{{ comment.content }}</p>
                <span class="float-right">Added: {{ post.createdAt | date('H:i d/m/Y')}}</span>
                <br>
                <hr>
            </div>
        {% endfor %}

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="button" class="btn btn-default float-right">Add comment</button>
        {{ form_end(form) }}
    </div>  
{% endblock %}
