{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ post.title }}</h1>
    <div>
        <p>{{ post.lead }}</p>
        <p>{{ post.content }}</p>

        <span class="float-right">Added: {{ post.createdAt | date('H:i d/m/Y')}}</span>
        
        <br>
        <hr>

        <h3>Comments</h3>

        {% for comment in post.comments %}
            <div>
                <p>{{ comment.content }}</p>
                <span class="float-right">
                    Added: {{ post.createdAt | date('H:i d/m/Y')}}
                    {% if comment.user %}
                        By: {{ comment.user }}
                    {% endif %}
                </span>
                <br>
                <hr>
            </div>
        {% endfor %}

        {% if app.user %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        {% else %} 
            <p> 
                If you want to comment current article - you must to be  
                <a href="{{ path('fos_user_security_login') }}">login.</a>
            </p>
        {% endif %}
    </div>  
{% endblock %}
